{
  "name": "ddd-node-example",
  "version": "1.0.0",
  "description": "A hexagonal architecture and DDD example in Node.js",
  "main": "index.js",
  "engines": {
    "node": ">=12.0.0",
    "npm": ">=6.7.0"
  },
  "scripts": {
    "dev:backend": "ts-node-dev --ignore-watch node_modules ./src/apps/backend/start.ts",
    "test": "npm run test:features && npm run test:unit",
    "test:features": "NODE_ENV=test cucumber-js -p backend",
    "test:unit": "NODE_ENV=test jest",
    "build": "npm run build:clean && npm run build:tsc",
    "build:tsc": "tsc -p tsconfig.prod.json",
    "build:clean": "rm -r dist; exit 0",
    "lint": "eslint . --ext .ts",
    "lint:fix": "npm run lint -- --fix"
  },
  "keywords": [],
  "author": "Iván Betanzos Macías",
  "license": "ISC",
  "devDependencies": {
    "@cucumber/cucumber": "^9.4.0",
    "@types/compression": "^1.7.2",
    "@types/convict": "^6.1.3",
    "@types/errorhandler": "^1.5.0",
    "@types/express": "^4.17.17",
    "@types/faker": "^5.5.8",
    "@types/glob": "^8.1.0",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.4.5",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.2",
    "@types/uuid-validate": "^0.0.1",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "eslint": "^8.47.0",
    "eslint-plugin-import": "^2.28.0",
    "faker": "^5.5.3",
    "jest": "^29.6.2",
    "lint-staged": "^14.0.0",
    "prettier": "^3.0.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "body-parser": "^1.20.2",
    "compression": "^1.7.4",
    "convict": "^6.2.4",
    "dotenv": "^16.3.1",
    "errorhandler": "^1.5.1",
    "express": "^4.18.2",
    "express-promise-router": "^4.1.1",
    "express-validator": "^7.0.1",
    "glob": "^10.3.3",
    "helmet": "^7.0.0",
    "http-status": "^1.6.2",
    "mongodb": "^6.0.0",
    "ts-node": "^10.9.1",
    "uuid": "^9.0.0",
    "uuid-validate": "^0.0.3"
  }
}
