{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": ".",
    "moduleResolution": "Node",
    "baseUrl": ".",
    "paths": {
      "@contexts/*": ["src/Contexts/*"],
      "@apps/*": ["src/apps/*"],
      "@tests/*": ["tests/*"],
      "@contexts-test/*": ["tests/contexts/*"],
      "@apps-test/*": ["tests/apps/*"]
    },                                     
    "resolveJsonModule": true,                       
    "sourceMap": false,
    "outDir": "./dist",
    "noEmit": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", ".vscode"]
}
